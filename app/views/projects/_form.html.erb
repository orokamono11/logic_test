
<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <h2><%= pluralize(@project.errors.count, "error") %> エラーメッセージ:</h2>
    <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <p>
    <%= f.label :作りたいもの %><br>
    <!-- 文字制限 20文字まで -->
    <%= f.text_field :create_title, maxlength: '20' %>
  </p>

  <p>
    <%= f.label :内容 %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
